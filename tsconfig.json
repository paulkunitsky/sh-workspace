{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@workspace-sense-hub/sh-api": ["libs/sh-api/src/index.ts"],
      "@workspace-sense-hub/rules-engine": ["libs/rules-engine/src/index.ts"],
      "@workspace-sense-hub/logging": ["libs/logging/src/index.ts"],
      "@workspace-sense-hub/configuration": ["libs/configuration/src/index.ts"],
      "@workspace-sense-hub/sh-mock-api": ["libs/sh-mock-api/src/index.ts"],
      "@workspace-sense-hub/components": ["libs/components/src/index.ts"],
      "@workspace-sense-hub/external": ["libs/external/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
